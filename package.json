{
  "name": "template-svelte",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Template for building Svelte libraries with Storybook and Rollup",
  "author": "Eric Liu (https://github.com/metonym)",
  "svelte": "src/index.js",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "scripts": {
    "start": "start-storybook -p 9000",
    "build": "rollup -c",
    "build:docs": "build-storybook -o docs",
    "deploy": "npx gh-pages -d docs",
    "test": "jest --coverage"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@storybook/addon-knobs": "^5.3.18",
    "@storybook/addon-storysource": "^5.3.18",
    "@storybook/cli": "^5.3.18",
    "@storybook/svelte": "^5.3.18",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/svelte": "^1.11.0",
    "babel-jest": "^25.2.4",
    "babel-loader": "^8.1.0",
    "eslint": "^6.8.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^4.3.0",
    "jest": "^25.2.4",
    "jest-transform-svelte": "^2.1.1",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "prettier-plugin-svelte": "^1.2.1",
    "pretty-quick": "^2.0.1",
    "regenerator-runtime": "^0.13.7",
    "rollup": "^2.26.11",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^6.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.25.0",
    "svelte-loader": "^2.13.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --pattern 'src/**/*.{js,svelte}' --staged"
    }
  },
  "lint-staged": {
    "*.{js,svelte}": [
      "eslint --fix 'src/**'",
      "git add"
    ]
  },
  "prettier": {
    "svelteStrictMode": true
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.svelte$": "jest-transform-svelte",
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "svelte"
    ],
    "setupFilesAfterEnv": [
      "regenerator-runtime/runtime",
      "@testing-library/jest-dom/extend-expect"
    ]
  }
}
